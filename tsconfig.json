{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "inlineSources": true,
      "lib": ["es2019", "dom"]
    },
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ]
  }